<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <title>Orders</title>
</head>
<body>

    
    <div class="container-sm card shadow mt-5" >
        <h4 style="text-align: center;">Orders</h4>
        <div class="row" style="background-color: deepskyblue;">
            <div class="accordion" id="accordionExample">
                <%   customers.forEach(function(customer){  %>
                <div class="accordion-item">
                  <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        <%=customer.username%>
                    </button>
                  </h2>
                  <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <table class="table table-hover">
                            <thead>
                              <tr>
                                
                                <th scope="col">Shipping Address</th>
                                <th scope="col">UserId</th>
                                <th scope="col">Items</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <td><label><b>Name </b></label>:
                                  <%=customer.cfullname%></td>

                                <td><%=customer.username%></td>
                                <td><%=items%></td> 
                              </tr>
                              <tr>
                                <td><label><b>Contact </b></label>:
                                  <%=customer.cphone%></td>
                              </tr>
                              <tr>
                                <td><label><b>City </b></label>: 
                                  <%=customer.ccity%></td>
                                   
                              </tr>
                              <tr>
                                <td><label><b>Address </b></label>:
                                  <%=customer.caddress%></td>
                                
                              </tr>
                              <tr>
                                <td><label><b>State </b></label>:
                                  <%=customer.cstate%></td>
                                
                              </tr>
                              <tr>
                                <td><label><b>Pin code </b></label>:
                                  <%=customer.cpin%></td>
                              </tr>
                              <tr>
                                <td><label><b>Delivary Time </b></label>:
                                  <%=customer.ctime%></td>
                               
                              </tr>
                              
                            </tbody>

                          </table>
                    </div>
                  </div>
                </div>
                <% }) %> 
              </div>
              
        </div>
        <a href="/home2"> <button type="submit" class="btn btn-outline-success mt-4"  style="float: right; margin-right: 450px;">Accept</button></a>
        <a href="/home2"> <button type="submit" class="btn btn-outline-danger" style="margin-top: -70px; margin-left: 450px;">Reject</button></a>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
   
</body>
</html>